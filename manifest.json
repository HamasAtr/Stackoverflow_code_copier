{
  "manifest_version": 3,
  "name": "Stack Overflow Code Copier",
  "description": "This extension allows you to easily copy code snippets from Stack Overflow.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.stackoverflow.com/*"],
      "js": ["content-script.js"],
      "css": [ "styles.css" ]
    }
  ]
}
